@model EliteATMWebApp.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h1>Create a new banking account</h1>

<hr />
<div class="container" style="display: flex; justify-content:center; height: fit-content;">
    <div class="col-md-4 border border-dark rounded" style="padding: 10px 20px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountId" value="0"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Balance" value="0"/>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-select" aria-label="Select a type">
                  <option hidden selected>Select a type</option>
                  <option value="Business">Business</option>
                  <option value="Savings">Savings</option>
                  <option value="Chequing">Chequing</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <select asp-for="Currency" class="form-select" aria-label="Select a currency">
                  <option hidden selected>Select a currency</option>
                  <option value="JMD">JMD</option>
                  <option value="USD">USD</option>
                  <option value="CAD">CAD</option>
                </select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" value="@UserTracker.User?.Id" class="form-control" readonly/>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:flex; justify-content: right;">
                    <input type="submit" value="Save" class="btn btn-primary accountBtns" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
