@model EliteATMWebApp.Models.Account

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h4 class="text-center">Are you sure you want to delete this?</h4>
<div>
    <hr />
    <div class="container" style="display: flex; justify-content:center; height: fit-content;">
        <div class="col-md-4 border border-dark rounded" style="padding: 10px 20px;">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Type)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Type)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Balance)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Balance)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Currency)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Currency)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class = "col-sm-10">
                    @Model.UserId
                </dd>
            </dl>
              <form asp-action="Delete" style="display:flex; justify-content: right;">
                <input type="hidden" asp-for="AccountId" />
                <input type="submit" value="Confirm Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
<style>
    .col-sm-10{
        text-align: right;
    }
</style>